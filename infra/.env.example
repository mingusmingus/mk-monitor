# Copia este archivo a .env y personaliza los valores
# Variables de entorno para mk-monitor (desarrollo)
# Importante: NO subir infra/.env al repositorio (está en .gitignore)

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mkmonitor
DB_USER=mkmonitor
DB_PASS=mkmonitor

# URL completa de conexión (usada por SQLAlchemy)
DATABASE_URL=postgresql+psycopg2://mkmonitor:mkmonitor@postgres:5432/mkmonitor

# JWT
JWT_SECRET=changeme_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# Cifrado simétrico de credenciales de routers (ALMACENAR DE FORMA SEGURA EN PROD)
ENCRYPTION_KEY=changeme_32bytes_base64
# Formato recomendado: clave Fernet base64 urlsafe de 32 bytes
# Ejemplo (placeholder): gAAAA... (no uses valores reales en este ejemplo)

# Flask/Backend
FLASK_ENV=development
BACKEND_PORT=8000

# Frontend
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000/api

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# PostgreSQL (nomenclatura alternativa para compatibilidad)
POSTGRES_HOST=postgres
POSTGRES_DB=mkmonitor
POSTGRES_USER=mkadmin
POSTGRES_PASSWORD=mkpassword

# Entorno de aplicación
APP_ENV=dev

# Clave para análisis IA (DeepSeek). No uses valores reales en este archivo público.
DEEPSEEK_API_KEY=changeme_deepseek_key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat
AI_ANALYSIS_PROVIDER=auto
AI_TIMEOUT_SEC=20
AI_MAX_TOKENS=800

# Conexión MikroTik RouterOS (nuevas variables)
ROS_PROVIDER=auto                    # librouteros | routeros_api | ssh | auto
ROS_API_PORT=8728                    # Puerto RouterOS API (8729 para SSL)
ROS_SSH_PORT=22                      # Puerto SSH
ROS_CONNECT_TIMEOUT_SEC=5            # Timeout de conexión
ROS_COMMAND_TIMEOUT_SEC=10           # Timeout de ejecución de comandos
ROS_BACKOFF_BASE_MS=200              # Base de backoff exponencial en ms
ROS_MAX_RETRIES=3                    # Número máximo de reintentos
ROS_USE_SSL=false                    # Usar SSL para RouterOS API (true/false)
MONITORING_LOG_LIMIT=200             # Límite de logs por consulta
