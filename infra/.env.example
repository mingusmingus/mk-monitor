# Copia este archivo a .env y personaliza los valores
# Variables de entorno para mk-monitor (desarrollo)

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mkmonitor
DB_USER=mkmonitor
DB_PASS=mkmonitor

# URL completa de conexión (usada por SQLAlchemy)
DATABASE_URL=postgresql+psycopg2://mkmonitor:mkmonitor@postgres:5432/mkmonitor

# JWT
JWT_SECRET=changeme_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# Cifrado simétrico de credenciales de routers (ALMACENAR DE FORMA SEGURA EN PROD)
ENCRYPTION_KEY=changeme_32bytes_base64

# Flask/Backend
FLASK_ENV=development
BACKEND_PORT=8000

# Frontend
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000/api

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# PostgreSQL (nomenclatura alternativa para compatibilidad)
POSTGRES_HOST=postgres
POSTGRES_DB=mkmonitor
POSTGRES_USER=mkadmin
POSTGRES_PASSWORD=mkpassword

# Entorno de aplicación
APP_ENV=dev